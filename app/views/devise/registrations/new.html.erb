<%= render "shareds/header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <h2 class="sinki">新規登録</h2>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= render 'shareds/error_messages', model: f.object %>
    </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" >ユーザー名</label>
    </div>
    <%= f.text_field :user_name, class:"input-text", autofocus: true, placeholder:"例)BALL太郎" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" >メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-text", autofocus: true, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" >パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-text", autofocus: true, placeholder:"6文字以上の半角英数字で入力してください" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" >パスワード(確認用)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-text", autofocus: true, placeholder:"上記と同じパスワードを入力して下さい" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
<% end %>