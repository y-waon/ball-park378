<%= render "shareds/header" %>

<%= form_with(model: @user, url: user_session_path, class: 'registration-main', local: true) do |f| %>
  <h2 class="sinki">ログイン</h2>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" >メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-text", autofocus: true, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" >パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-text", autofocus: true, placeholder:"6文字以上の半角英数字で入力してください" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" ,class:"register-red-btn" %>
  </div>
<% end %>


